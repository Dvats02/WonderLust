<% layout("/Layouts/BoilerPlate") %>
<body>
    <h3>Edit Your Listing</h3>
    <form method="post" action="/Listings/<%= listing._id %>?_method=PUT" class="row g-3 needs-validation" novalidate>
        <div class="col-md-6">
            <label for="listingTitle" class="form-label">Title</label>
            <input name="listing[title]" type="text" class="form-control" id="listingTitle" value="<%= listing.title %>" required>
            <div class="invalid-feedback">
                Please enter a title.
            </div>
        </div>

        <div class="col-md-12">
            <label for="listingDescription" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" id="listingDescription" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please enter a description.
            </div>
        </div>

        <div class="col-md-6">
            <label for="listingImage" class="form-label">Image URL</label>
<input name="listing[image]" type="text" class="form-control" id="listingImage" value="<%= listing.image.url %>" required>
            <div class="invalid-feedback">
                Please enter an image URL.
            </div>
        </div>

        <div class="col-md-6">
            <label for="listingPrice" class="form-label">Price</label>
            <input name="listing[price]" type="number" class="form-control" id="listingPrice" value="<%= listing.price %>" required>
            <div class="invalid-feedback">
                Please enter a price.
            </div>
        </div>

        <div class="col-md-6">
            <label for="listingCountry" class="form-label">Country</label>
            <input name="listing[country]" type="text" class="form-control" id="listingCountry" value="<%= listing.country %>" required>
            <div class="invalid-feedback">
                Please enter a country.
            </div>
        </div>

        <div class="col-md-6">
            <label for="listingLocation" class="form-label">Location</label>
            <input name="listing[location]" type="text" class="form-control" id="listingLocation" value="<%= listing.location %>" required>
            <div class="invalid-feedback">
                Please enter a location.
            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
    </form>
</body>
