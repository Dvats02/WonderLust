
<% layout('/layouts/BoilerPlate') %>
  <div class="container mt-4">
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 g-4">
      <% for (let list of allListings) { %>
        <div class="col">
          <a href="/Listings/<%= list._id %>" style="text-decoration: none; color: inherit;">
            <div class="card h-100 shadow-sm rounded" style="cursor: pointer; overflow: hidden;">
              <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image"
                style="height: 250px; object-fit: cover;" />
              <div class="card-body bg-white">
                <h5 class="card-title fw-bold mb-2"><%= list.title %></h5>
                <p class="card-text mb-0">• ₹ <%= list.price.toLocaleString("en-IN") %>/Night</p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>




