<% layout("/Layouts/BoilerPlate") %>
<body>
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
        <% for (let list of allListings) { %>
            <a href="/Listings/<%= list._id %>" style="text-decoration: none; color: inherit;">
                <div class="card col" style="width: 20rem; cursor: pointer;" class="listing-card">
                    <img src="<%= list.image %>" class="card-img-top" alt="listing_image" style="height: 20rem"/>
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <b><h5 class="card-title"><%= list.title %></h5></b>
                        <p class="card-text">
                            <li>â‚¹ <%= list.price.toLocaleString("en-IN") %>/Night</li>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>


